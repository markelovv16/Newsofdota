 <br>
 <h1><%= @newsofgame.text %></h1><br/>
 <h1><%= @newsofgame.desc %><h1><br/>
 <% @newsofgame.photos.each do |photo| %>
  <%= image_tag(photo.url, style: "width: 750px;") %><br>
<% end %>


<%= form_for :newscomment, url:newscomments_path do |f| %>
<%= render 'newscomments/form', f:f%>
<%= f.hidden_field :object_type, value: @newsofgame.class.name%>
<%= f.hidden_field :object_id, value: @newsofgame.id%>
<%= f.submit "Create" %>
<% end %>

<% Newscomment.where(object: @newsofgame).each do |comment| %>
<br>User: 
<%= comment.user.email.split('@').first %><br>
<%=comment.text%><hr>
<%end%>